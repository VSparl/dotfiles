# Editing these config files easily
alias zshedit="nvim ~/.zshrc && source ~/.zshrc"
alias aliasedit="nvim ~/.zsh_aliases && source ~/.zsh_aliases"

# Utilities
alias checksize="du -bsh"
alias icat=chafa
alias activate="source ./venv/bin/activate &> /dev/null || source ./.venv/bin/activate &> /dev/null"
alias execute="chmod +x"
alias paste="wl-paste"
alias copy="wl-copy"

# Better program alternatives
alias cat=bat
alias lg=lazygit
alias ls=lsd

# Ease of use
alias cls="clear && ls"
alias open=xdg-open
alias py=python3
alias dps='docker ps -a --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"'

