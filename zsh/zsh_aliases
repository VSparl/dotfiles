function backup() {
	cp $1 $1.bak
}

function cnd() {
	mkdir -p $1
	cd $1
}

function cheat() {
    curl -s "cheat.sh/$1" | cat
}

# Open shell in docker containers
function dbash() {
    docker exec -it $1 /bin/bash
}

# Navigate using Yazi
function yy() {
    local _yy_tmp=$(mktemp -t "yazi-cwd.XXXXXX")
    yazi "$@" --cwd-file="$_yy_tmp"
    local _yy_cwd=$(cat -- "$_yy_tmp")
    rm -f -- "$_yy_tmp"
    if [ -n "$_yy_cwd" ] && [ "$_yy_cwd" != "$PWD" ]; then
        cd -- "$_yy_cwd"
    fi
}   
