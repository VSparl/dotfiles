function backup() {
	cp $1 $1.bak
}

function cnd() {
	mkdir -p $1
	cd $1
}

function cheat() {
    curl -s "cheat.sh/$1" | cat
}

# Use `rcd` to change directory with ranger
function ranger_cd() {
    temp_file="$(mktemp -t "ranger_cd.XXXXXXXXXX")"
    ranger --choosedir="$temp_file" -- "${@:-$PWD}"
    if [ -f "$temp_file" ]; then
        chosen_dir="$(cat "$temp_file")"
        [ -n "$chosen_dir" ] && [ "$chosen_dir" != "$PWD" ] && cd "$chosen_dir"
    fi
    rm -f "$temp_file"
}
alias rcd="ranger_cd"
