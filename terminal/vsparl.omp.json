{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": ">> ",
    "foreground": "#d08770",
    "background": "transparent"
  },
  "console_title_template": "{{if .Root}}root {{.Shell}} in {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<#d08770>{{ .UserName }}</><d><#4c566a>@</></d>{{ end }}<#d08770>{{ .HostName }}</><#4c566a> \ue0b1</>",
          "foreground": "#eceff4",
          "background": "transparent",
          "type": "session",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf0e7<#4c566a> \ue0b1</>",
          "foreground": "#ebcb8b",
          "background": "transparent",
          "type": "root",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "<#81a1c1>\ue5fe </>",
            "style": "full"
          },
          "template": "<#ebcb8b> \ue5fe </>{{ .Path }} ",
          "foreground": "#eceff4",
          "background": "transparent",
          "type": "path",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "<#4c566a>\ue0b1 </>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#bf616a> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#a3be8c> \uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
          "foreground": "#ebcb8b",
          "background": "transparent",
          "type": "git",
          "style": "diamond",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ebcb8b{{ end }}",
            "{{ if gt .Ahead 0 }}#88c0d0{{ end }}",
            "{{ if gt .Behind 0 }}#b48ead{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "foreground": "#eceff4",
          "background": "transparent",
          "type": "text",
          "style": "diamond"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "foreground": "#eceff4",
          "background": "transparent",
          "type": "text",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} (venv) {{ end }}{{ .Full }}{{ end }}<#4c566a></>",
          "foreground": "#a3be8c",
          "background": "transparent",
          "type": "python",
          "style": "diamond"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "~#@‚ùØ",
          "foreground": "#4c566a",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "style": "roundrock",
            "threshold": 0
          },
          "template": " {{ .FormattedMs }}</>",
          "foreground": "#d08770",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": " \uea9f {{ .Code }} ",
          "foreground": "#a3be8c",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#bf616a{{ end }}"
          ]
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
